<Window x:Class="Client.View.GameView"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        xmlns:viewModel="clr-namespace:Client.ViewModel"
        xmlns:converts="clr-namespace:Client.Converts"
        xmlns:resx="clr-namespace:Client.Properties"
        xmlns:uc="clr-namespace:Client.View.UserControl"
        Height="800" Width="800"
        MinWidth="450"
        >
    <Window.DataContext>
        <viewModel:GameViewModel x:Name="GameViewModel"></viewModel:GameViewModel>
    </Window.DataContext>
    <Window.Resources>
        <converts:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converts:AnswerCharToBool x:Key="AnswerCharToBool"/>
      
    </Window.Resources>
    <Grid  >
        <Grid.Background>
            <ImageBrush
                Stretch="Fill" 
                AlignmentX="Center"
                AlignmentY="Top"
                ImageSource="../Background.png"></ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
            <StackPanel>
                <Label 
                    Style="{StaticResource ProgressLabelStyle}" 
                    Content="Progress"/>
                <ProgressBar 
                    Style="{StaticResource ProgressBarStyle}"
                    Maximum="{Binding QuestionNumberTotal}"
                    Value="{Binding QuestionNumber}"
                />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" >
            <TextBlock 
                Style="{StaticResource QuestionStyle}"
                Text="{Binding QuestionText}"/>

        </Grid>

        <WrapPanel Grid.Row="2" >
            <uc:AnswerUserControl 
                    Sign="A"
                    ButtonCommand="{Binding RelativeSource={
                    RelativeSource Mode=FindAncestor, 
                    AncestorType={x:Type Window}}, 
                    Path=DataContext.SendAnswerToSerwerCommand, 
                    Mode=TwoWay}"
                    Answer="{Binding RelativeSource={
                    RelativeSource Mode=FindAncestor, 
                    AncestorType={x:Type Window}}, 
                    Path=DataContext.AnswerA, 
                    Mode=TwoWay}"
                    IsEnabled="{Binding RelativeSource={
                    RelativeSource Mode=FindAncestor, 
                    AncestorType={x:Type Window}}, 
                    Path=DataContext.MyAnswer, 
                    Converter={StaticResource AnswerCharToBool},ConverterParameter='A'}"
                    Margin="40,00,0,40" 
                    HorizontalAlignment="Center"
                    >
            </uc:AnswerUserControl>
            <uc:AnswerUserControl 
                    Sign="B"
                    ButtonCommand="{Binding RelativeSource={
                    RelativeSource Mode=FindAncestor, 
                    AncestorType={x:Type Window}}, 
                    Path=DataContext.SendAnswerToSerwerCommand, 
                    Mode=TwoWay}"
                    Answer="{Binding RelativeSource={
                    RelativeSource Mode=FindAncestor, 
                    AncestorType={x:Type Window}}, 
                    Path=DataContext.AnswerB, 
                    Mode=TwoWay}" 
                IsEnabled="{Binding RelativeSource={
                    RelativeSource Mode=FindAncestor, 
                    AncestorType={x:Type Window}}, 
                    Path=DataContext.MyAnswer, 
                    Converter={StaticResource AnswerCharToBool},ConverterParameter='B'}"
                    Margin="40,0,0,40" 
                    HorizontalAlignment="Center"/>
            <uc:AnswerUserControl 
                    Sign="C"
                    ButtonCommand="{Binding RelativeSource={
                    RelativeSource Mode=FindAncestor, 
                    AncestorType={x:Type Window}}, 
                    Path=DataContext.SendAnswerToSerwerCommand, 
                    Mode=TwoWay}"
                    Answer="{Binding RelativeSource={
                    RelativeSource Mode=FindAncestor, 
                    AncestorType={x:Type Window}}, 
                    Path=DataContext.AnswerC, 
                    Mode=TwoWay}" 
                IsEnabled="{Binding RelativeSource={
                    RelativeSource Mode=FindAncestor, 
                    AncestorType={x:Type Window}}, 
                    Path=DataContext.MyAnswer, 
                    Converter={StaticResource AnswerCharToBool},ConverterParameter='C'}"
                    Margin="40,0,0,40"
                    HorizontalAlignment="Center"/>
            <uc:AnswerUserControl 
                    Sign="D"
                    ButtonCommand="{Binding RelativeSource={
                    RelativeSource Mode=FindAncestor, 
                    AncestorType={x:Type Window}}, 
                    Path=DataContext.SendAnswerToSerwerCommand, 
                    Mode=TwoWay}"
                    Answer="{Binding RelativeSource={
                    RelativeSource Mode=FindAncestor, 
                    AncestorType={x:Type Window}}, 
                    Path=DataContext.AnswerD, 
                    Mode=TwoWay}" 
                IsEnabled="{Binding RelativeSource={
                    RelativeSource Mode=FindAncestor, 
                    AncestorType={x:Type Window}}, 
                    Path=DataContext.MyAnswer, 
                    Converter={StaticResource AnswerCharToBool},ConverterParameter='D'}"
                    Margin="40,00,0,40"
                    HorizontalAlignment="Center"/>
        </WrapPanel>
        <Grid Grid.Row="3" 
              VerticalAlignment="Bottom">
            <StackPanel>
                <TextBlock 
                        Text="{Binding AnswerInfo}"
                        Style="{StaticResource QuestionStyle}"
                        Background="LightSlateGray"
                        Width="200"/>
                <TextBlock 
                    Text="{Binding MyPoints,StringFormat=Twoje punkty: {0}}"
                    Style="{StaticResource QuestionStyle}"

                    Background="LightSlateGray"
                    Width="200"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
